<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:textSize="50sp"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:textSize="80sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/alarm_off"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="65dp"
        app:button_background="@drawable/my_shape_but_off"
        app:button_image_disabled="@drawable/ic_lock_black_24dp"
        app:button_image_enabled="@drawable/ic_lock_open_black_24dp"
        app:button_image_height="80dp"
        app:button_image_width="80dp"
        app:has_activate_state="true"
        app:initial_state="disabled"
        app:inner_text="@string/swipe_to_off"
        app:inner_text_background="@drawable/my_shape_rounded"
        app:inner_text_bottom_padding="18dp"
        app:inner_text_color="@color/colorBlack"
        app:inner_text_size="16sp"
        app:inner_text_top_padding="18dp" />

</LinearLayout>
