<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TimePicker
        android:id="@+id/timePicker"
        style="@style/TimePicker" />

    <LinearLayout
        style="@style/LayoutInfo">

        <View
            style="@style/Line" />

        <FrameLayout
            android:id="@+id/days_of_week"
            style="@style/InfoItem" >

            <TextView
                style="@style/TextLeft"
                android:text="@string/days_of_the_week" />

            <TextView
                android:id="@+id/days"
                style="@style/TextRight"
                android:text="@string/without_replay" />

        </FrameLayout>

        <View
            style="@style/Line" />

        <FrameLayout
            android:id="@+id/sound_layout"
            style="@style/InfoItem">

            <TextView
                style="@style/TextLeft"
                android:text="@string/sound" />

            <TextView
                android:id="@+id/sound"
                style="@style/TextRight"
                android:text="@string/default_text"
                android:maxLength="12"
                android:drawableRight="@drawable/ic_arrow_right_black"/>

        </FrameLayout>

        <View
            style="@style/Line" />

        <FrameLayout
            android:id="@+id/vibration_layout"
            style="@style/InfoItem">

            <TextView
                style="@style/TextLeft"
                android:text="@string/vibration_signal" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/vibration"
                style="@style/SwitchButtonInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <View
            style="@style/Line" />

        <FrameLayout
            android:id="@+id/description_layout"
            style="@style/InfoItem">

            <TextView
                style="@style/TextLeft"
                android:text="@string/description" />

            <TextView
                android:id="@+id/description"
                style="@style/TextRight"
                android:text="@string/alarm_clock"
                android:drawableRight="@drawable/ic_arrow_right_black"/>

        </FrameLayout>

        <View
            style="@style/Line" />

        <FrameLayout
            android:id="@+id/photo_layout"
            style="@style/InfoItem">

            <TextView
                style="@style/TextLeft"
                android:layout_height="wrap_content"
                android:text="@string/setPhoto" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/photo_switch"
                style="@style/SwitchButtonInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/photo"
            style="@style/InfoItem"
            android:layout_height="0dp">

            <Button
                android:id="@+id/photo_button"
                style="@style/addImageAlarm"
                android:layout_gravity="left|center"
                android:background="@drawable/camera_selector" />

            <Button
                android:id="@+id/gallery"
                style="@style/addImageAlarm"
                android:layout_gravity="center"
                android:background="@drawable/gallery_selector"/>

            <ImageView
                android:id="@+id/photo_image"
                android:scaleType="centerCrop"
                style="@style/addImageAlarm"
                android:layout_gravity="right|center"/>

        </FrameLayout>

        <View
            style="@style/Line" />

    </LinearLayout>

</LinearLayout>
